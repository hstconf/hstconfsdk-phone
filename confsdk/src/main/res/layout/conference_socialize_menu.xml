<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="#bbbbbb"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/socialize_menu_ll2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingLeft="@dimen/height_1_80"
        android:paddingRight="@dimen/height_1_80"
        android:paddingTop="@dimen/height_1_80">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/socialize_4"
            android:textColor="#888888"
            android:textSize="@dimen/textSize_01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/socialize_menu_ll_wechat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a6_btn_ll2"
                android:layout_weight="1"
                android:gravity="center"
                android:clickable="true"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/socialize_menu_iv_wechat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/umeng_socialize_wechat" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_101_80"
                    android:gravity="center"
                    android:text="@string/socialize_5"
                    android:textColor="#151515"
                    android:textSize="@dimen/textSize_01" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/socialize_menu_ll_qq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a6_btn_ll2"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/socialize_menu_iv_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/umeng_socialize_qq" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_101_80"
                    android:gravity="center"
                    android:text="@string/socialize_7"
                    android:textColor="#151515"
                    android:textSize="@dimen/textSize_01" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/socialize_menu_ll_ding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a6_btn_ll2"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/socialize_menu_iv_ding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/umeng_socialize_ding" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_101_80"
                    android:gravity="center"
                    android:text="@string/socialize_9"
                    android:textColor="#151515"
                    android:textSize="@dimen/textSize_01" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/socialize_menu_ll_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/a6_btn_ll2"
                android:clickable="true"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/socialize_menu_iv_sms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/icon_socialize_menu_sms" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height_101_80"
                    android:gravity="center"
                    android:text="@string/socialize_2"
                    android:textColor="#151515"
                    android:textSize="@dimen/textSize_01" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>