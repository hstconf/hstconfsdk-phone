<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_inconf_as_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_main_hint"
    android:clickable="true"
    android:orientation="vertical">

    <View
        android:id="@+id/view_inconf_as_place_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_6_80"
        android:background="@color/black"
        android:layout_alignParentTop="true" />

    <FrameLayout
        android:id="@+id/fl_inconf_as"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left|top"
        android:layout_weight="1">


        <com.infowarelab.conference.ui.activity.inconf.view.ds.VideoSyncViewDS
            android:id="@+id/video_as"
            style="@style/ff"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/ll_as_closed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_main_hint"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/height_6_80"
                android:layout_height="@dimen/height_6_80"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_vs_closed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_2_80"
                android:text="@string/as_closed"
                android:textColor="#A1A1A1"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_as_wait"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_main_hint"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/height_6_80"
                android:layout_height="@dimen/height_6_80"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_vs_loading" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_2_80"
                android:text="@string/as_wait"
                android:textColor="#A1A1A1"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_as_nonsupport"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_main_hint"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/height_6_80"
                android:layout_height="@dimen/height_6_80"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_vs_nonsupport" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_2_80"
                android:text="@string/as_nonsupport"
                android:textColor="#A1A1A1"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_as_no"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_main_hint"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/height_6_80"
                android:layout_height="@dimen/height_6_80"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_as_null" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/height_2_80"
                android:text="@string/as_null"
                android:textColor="#A1A1A1"
                android:textSize="17sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_as_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="5dp"
            android:background="@drawable/pad_btn_as"
            android:paddingBottom="7dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:paddingTop="7dp"
            android:text="关闭"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="gone" />

    </FrameLayout>

    <View
        android:id="@+id/view_inconf_as_place_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_7_80"
        android:background="@color/black"
        android:layout_alignParentTop="true" />

</LinearLayout>