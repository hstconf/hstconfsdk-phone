<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conf_video_preview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar_bg"
    android:visibility="gone">

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/tvTitle"
        style="@style/styleActionBar"
        android:text="@string/sharePre"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeMid"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/btnShareVideo"
        style="@style/ww"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/height_6_80"
        android:layout_marginTop="@dimen/height_3_80"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <FrameLayout
        style="@style/ff"
        android:id="@+id/fl"
        android:layout_width="200px"
        android:layout_height="100px"
        android:background="@color/black"
        android:visibility="visible"
        android:layout_below="@id/tvTitle"
        android:layout_above="@id/btnShareVideo">

        <Button
            android:id="@+id/btnChangeCamera"
            android:layout_height="@dimen/height_104_80"
            android:layout_width="@dimen/height_104_80"
            android:layout_gravity="left|top"
            android:visibility="gone"
            android:background="@drawable/a6_btn_camera_rotate"
            android:layout_marginLeft="@dimen/width_1_80"
            android:layout_marginTop="@dimen/height_1_80" />

        <TextView
            style="@style/ww"
            android:layout_gravity="bottom|left"
            android:id="@+id/tvName"
            android:textColor="@color/black"
            android:textSize="@dimen/textSizeSmall"
            android:layout_marginLeft="@dimen/width_1_80"
            android:layout_marginBottom="@dimen/height_1_80" />
    </FrameLayout>

</RelativeLayout>