    <RelativeLayout style="@style/styleActionBar">

        <TextView
            style="@style/styleActiobBar_mid"
            android:text="@string/preconf_create_invite_mid" />

    </RelativeLayout>

    <LinearLayout
        style="@style/fwv"
        android:layout_weight="1">

        <include
            android:id="@+id/preconf_cretae_invite_contact"
            layout="@layout/invite_contact" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_8_80"
        android:layout_weight="0"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@color/actionbar_bg">

        <Button
            android:id="@+id/preconf_cretae_invite_confirmbutton"
            style="@style/style_btn_ok"
