<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:focusable="true"
    android:focusableInTouchMode="true"
    style="@style/ffv">


    <LinearLayout
        style="@style/fwv"
        android:layout_marginTop="@dimen/height_5_80"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_frag_join_number_tv_1"
            style="@style/ww"
            android:text="@string/joinbynumberhint"
            android:textColor="@color/a6_txt_black2"
            android:textSize="@dimen/textSize_07" />

        <LinearLayout
            android:id="@+id/view_frag_join_number_ll_4"
            style="@style/ww"
            android:layout_gravity="center_horizontal"
            android:visibility="gone">

            <TextView
                style="@style/ww"
                android:text="@string/conferenceNumber"
                android:textColor="@color/a6_txt_black2"
                android:textSize="@dimen/textSize_07" />

            <TextView
                android:id="@+id/view_frag_join_number_tv_2"
                style="@style/ww"
                android:layout_marginLeft="@dimen/width_3_80"
                android:textColor="@color/a6_txt_black2"
                android:textSize="@dimen/textSize_07"
                android:text="8888 8888" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/view_frag_join_number_ll_1"
        style="@style/style_ll_input"
        android:layout_marginTop="@dimen/height_3_80">

        <ImageView
            style="@style/style_iv_inputicon_square"
            android:src="@drawable/a6_icon_join_id" />

        <EditText
            android:id="@+id/view_frag_join_number_et_1"
            style="@style/style_et_input"
            android:maxLength="9"
            android:digits="1234567890"
            android:hint="@string/confNumber"
            android:text="33099107" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_frag_join_number_ll_2"
        style="@style/style_ll_input"
        android:layout_marginTop="@dimen/height_101_80">

        <ImageView
            style="@style/style_iv_inputicon_square"
            android:src="@drawable/a6_icon_join_name" />

        <EditText
            android:id="@+id/view_frag_join_number_et_2"
            style="@style/style_et_input"
            android:maxLength="10"
            android:hint="@string/preconf_setup_nickname"
            android:text="Fred" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_frag_join_number_ll_3"
        style="@style/style_ll_input"
        android:layout_marginTop="@dimen/height_101_80">

        <ImageView
            style="@style/style_iv_inputicon_square"
            android:src="@drawable/a6_icon_join_pwd" />

        <EditText
            android:id="@+id/view_frag_join_number_et_3"
            style="@style/style_et_input"
            android:singleLine="true"
            android:password="true"
            android:hint="@string/preconf_login_password"
            android:text=""
            android:enabled="true"
            android:focusable="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_frag_join_number_ll_5"
        style="@style/style_common_input_and_btn"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="@dimen/height_101_80"
        android:gravity="center_vertical|left"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="false"
        android:visibility="gone">

        <ImageView
            android:id="@+id/view_frag_join_number_iv_1"
            android:layout_height="@dimen/width_3_80"
            android:layout_width="@dimen/width_3_80"
            android:scaleType="centerCrop"
            android:src="@drawable/a6_icon_joinhost_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#818284"
            android:textSize="@dimen/textSize_03"
            android:layout_marginLeft="@dimen/width_2_80"
            android:text="@string/joinashost" />

    </LinearLayout>

    <Button
        android:id="@+id/view_frag_join_number_btn"
        android:layout_marginTop="@dimen/height_3_80"
        style="@style/style_btn_ok"
        android:text="@string/confirm" />

    <LinearLayout
        style="@style/style_common_input_and_btn"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/height_3_80">

        <TextView
            android:id="@+id/view_frag_join_number_tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/a6_txt_red1"
            android:textSize="@dimen/textSize_04"
            android:text="@string/alert"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>