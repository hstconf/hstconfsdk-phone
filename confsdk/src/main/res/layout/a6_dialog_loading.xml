<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="@dimen/width_9_80"
        android:layout_height="@dimen/width_9_80"
        android:background="@drawable/a6_bg_loading"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/view_dialog_loading_iv"
            android:layout_width="@dimen/width_4_80"
            android:layout_height="@dimen/width_4_80"
            android:scaleType="centerCrop"
            android:src="@drawable/a6_icon_loading" />
    </LinearLayout>

</RelativeLayout>