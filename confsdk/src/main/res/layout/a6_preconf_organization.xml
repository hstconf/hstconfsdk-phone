<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/ffv"
    android:background="@color/app_main_hint">

    <RelativeLayout
        android:id="@+id/act_preconf_org_rl_title"
        style="@style/style_rl_titleBar">

        <LinearLayout
            android:id="@+id/act_preconf_org_ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:focusable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/width_102_80"
            android:paddingRight="@dimen/width_102_80">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/height_6_80"
                android:src="@drawable/a6_btn_login_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_2_80"
                android:text="@string/preconf_login_back"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_02" />
        </LinearLayout>

        <TextView
            style="@style/style_tv_titleBar_mid"
            android:text="@string/preconf_org_title" />
    </RelativeLayout>

    <LinearLayout
        style="@style/fwv"
        android:layout_weight="1">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#CFCFCF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E1E1E1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_2"
            android:paddingLeft="@dimen/dp_5"
            android:paddingRight="@dimen/dp_5"
            android:paddingTop="@dimen/dp_2">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/a6_bg_et_corners"
                android:scrollbars="none"
                android:overScrollMode="never">

                <LinearLayout
                    android:id="@+id/view_frag_org_ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_18"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_2" />
            </HorizontalScrollView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#CFCFCF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dp_3"
            android:background="#CFCFCF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_25"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/view_frag_org_iv_back"
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_23"
                android:padding="@dimen/dp_6"
                android:src="@drawable/icon_org_back" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:background="#CFCFCF" />

            <TextView
                android:id="@+id/view_frag_org_tv_curorg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_3"
                android:text="Root"
                android:textColor="@color/a6_input_black"
                android:textSize="@dimen/textSize_06" />

            <TextView
                android:id="@+id/view_frag_org_tv_toroot"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_3"
                android:paddingRight="@dimen/dp_6"
                android:text="@string/preconf_org_toroot"
                android:textColor="#3E8CD4"
                android:textSize="@dimen/textSize_05" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#CFCFCF" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white">

            <TextView
                android:id="@+id/view_frag_org_tv_null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_horizontal"
                android:text="@string/inconf_invite_norecentcontacts"
                android:textColor="@color/a6_input_hint"
                android:textSize="@dimen/textSize_04" />

            <ListView
                android:id="@+id/view_frag_org_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbars="none"
                android:scrollingCache="false"
                android:overScrollMode="never" />
        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CFCFCF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_8_80"
        android:layout_weight="0"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/view_frag_org_btn_confirm"
            style="@style/style_btn_ok"
            android:text="@string/confirm"
            android:enabled="true" />

    </LinearLayout>

</LinearLayout>
