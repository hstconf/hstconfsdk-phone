<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/item_org_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_26"
        android:background="@drawable/a6_btn_ll2"
        android:padding="@dimen/dp_5"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_org_iv_file"
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_16"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_org_file" />

        <TextView
            android:id="@+id/item_org_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_3"
            android:textColor="@color/a6_txt_black2"
            android:textSize="@dimen/textSize_04" />

        <ImageView
            android:id="@+id/item_org_iv_enter"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_org_enter" />

        <ImageView
            android:id="@+id/item_org_iv_checked"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_org_selected" />
    </LinearLayout>

    <View
        android:id="@+id/item_org_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_23"
        android:background="#CFCFCF" />
</LinearLayout>