<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llfirstfloor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_7_80"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/width_4_80"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="10"
            android:text="xxxx"
            android:textColor="@color/font_confList_type"
            android:textSize="@dimen/textSize_02" />

        <ImageView
            android:id="@+id/ivView"
            android:layout_width="@dimen/height_7_80"
            android:layout_height="@dimen/height_7_80"
            android:padding="@dimen/height_102_80"
            android:layout_marginRight="24dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_viewvideo_normal" />

        <ImageView
            android:id="@+id/ivSync"
            android:layout_width="@dimen/height_7_80"
            android:layout_height="@dimen/height_7_80"
            android:padding="@dimen/height_102_80"
            android:layout_marginRight="24dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_sharevideo_normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/width_4_80"
        android:background="@color/a6_cuttingline3" />

</LinearLayout>
