<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/fw"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <View
        android:id="@+id/invite_contact_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:background="#CFCFCF" />

    <LinearLayout
        android:id="@+id/invite_contact_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/a6_btn_ll2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_1"
        android:paddingBottom="@dimen/dp_1">

        <LinearLayout
            style="@style/wwh"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_6"
                android:scaleType="fitCenter"
                android:src="@drawable/ico_name" />

            <TextView
                android:id="@+id/invite_contact_listcname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_2_80"
                android:singleLine="true"
                android:textColor="@color/a6_txt_black2"
                android:textSize="@dimen/textSize_04" />
        </LinearLayout>

        <LinearLayout
            style="@style/wwh"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/invite_contact_listphonenumber_img"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_6"
                android:scaleType="fitCenter"
                android:src="@drawable/ico_mobil" />

            <TextView
                android:id="@+id/invite_contact_listphonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_2_80"
                android:singleLine="true"
                android:textColor="@color/a6_txt_black2"
                android:textSize="@dimen/textSize_04" />
        </LinearLayout>

        <LinearLayout
            style="@style/wwh"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/invite_contact_listemail_img"
                android:layout_width="@dimen/dp_6"
                android:layout_height="@dimen/dp_6"
                android:src="@drawable/ico_mail" />

            <TextView
                android:id="@+id/invite_contact_listemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/width_2_80"
                android:singleLine="true"
                android:textColor="@color/a6_txt_black2"
                android:textSize="@dimen/textSize_04" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>