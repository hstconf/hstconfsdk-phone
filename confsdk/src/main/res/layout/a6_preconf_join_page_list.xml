<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ffv"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.infowarelab.conference.ui.view.ConfListRefreshView4Frag
        android:id="@+id/view_frag_join_list_lv"
        style="@style/ff"
        android:layout_gravity="center"
        android:choiceMode="singleChoice"
        android:divider="@null"
        android:listSelector="@android:color/transparent"
        android:background="@null"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:scrollingCache="false" />

    <LinearLayout
        android:id="@+id/view_frag_join_list_ll"
        android:layout_width="@dimen/width_9_80"
        android:layout_height="@dimen/width_9_80"
        android:layout_gravity="center"
        android:background="@drawable/a6_bg_loading"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/view_frag_join_list_iv_1"
            android:layout_width="@dimen/width_4_80"
            android:layout_height="@dimen/width_4_80"
            android:scaleType="centerCrop"
            android:src="@drawable/a6_icon_loading" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_frag_join_list_ll_nomeetting"
        style="@style/ww"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/view_frag_join_list_iv_2"
            style="@style/ww"
            android:background="@drawable/icon_gestureleft" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_103_80"
            android:textSize="@dimen/textSize_07"
            android:textColor="@color/a6_txt_black2"
            android:text="@string/nomeetting" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/height_101_80"
            android:textColor="@color/a6_txt_black2"
            android:textSize="@dimen/textSize_02"
            android:text="@string/slidetotheleft" />

    </LinearLayout>


</FrameLayout>